{
  "name": "@chrisgscott/task-cli",
  "version": "1.0.4",
  "description": "A CLI tool for managing ClickUp tasks from the terminal",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "task": "./bin/task.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "setup": "node ./dist/scripts/setup.js"
  },
  "keywords": [
    "cli",
    "task-management",
    "clickup",
    "productivity",
    "todo",
    "project-management",
    "templates"
  ],
  "author": "Chris Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisgscott/ClickUpCLI.git"
  },
  "bugs": {
    "url": "https://github.com/chrisgscott/ClickUpCLI/issues"
  },
  "homepage": "https://github.com/chrisgscott/ClickUpCLI#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "conf": "^11.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
